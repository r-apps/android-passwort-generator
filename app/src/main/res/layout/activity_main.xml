<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/container" android:layout_width="match_parent" android:layout_height="match_parent"
              android:orientation="vertical" tools:context="de.rubeen.apps.android.passwortgenerator.MainActivity">
    <include android:id="@+id/mainActivityToolbar" layout="@layout/toolbar"/>


    <include android:id="@+id/content_home" style="@style/content" layout="@layout/content_home" />
    <include android:id="@+id/content_savedPasswords" style="@style/content" layout="@layout/content_history" />
    <include android:id="@+id/content_settings" style="@style/content" layout="@layout/content_settings" />
    <include android:id="@+id/content_catalog" style="@style/content" layout="@layout/content_catalog" />

    <android.support.design.widget.BottomNavigationView android:id="@+id/navigation" android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="bottom"
                                                        android:background="?android:attr/windowBackground"
                                                        app:menu="@menu/navigation"/>

</LinearLayout>
