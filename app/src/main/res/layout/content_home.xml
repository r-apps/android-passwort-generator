<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:tools="http://schemas.android.com/tools"
             android:background="@color/colorContentHomeBackground">
    <Button android:id="@+id/contentHome_btnStart"
            android:background="@drawable/ic_autorenew_black_48px" android:backgroundTint="@color/colorAccent"
            android:layout_gravity="center" android:layout_width="144dp" android:layout_height="144dp"/>

    <FrameLayout android:id="@+id/contentHome_generatedPasswordLayout"
                 android:layout_width="match_parent" android:layout_height="match_parent" android:visibility="gone">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:orientation="vertical">
            <EditText android:id="@+id/contentHome_passwordBox"
                      android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:cursorVisible="false" android:textColor="@color/colorEditTextForeground"/>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:layout_marginRight="5dp" android:layout_marginLeft="5dp"
                          android:layout_marginTop="10dp">
                <Button android:id="@+id/contentHome_passwordCreate"
                        android:layout_height="wrap_content" android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/contentHome_btnNewText"/>
                <Button android:id="@+id/contentHome_passwordCopy"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/contentHome_btnCopyText"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</FrameLayout>