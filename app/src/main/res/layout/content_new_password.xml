<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@color/colorContentBackground"
              android:paddingVertical="10dp">

    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textNoSuggestions"
            android:id="@+id/textView"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textAutoCorrect"
            android:hint="@string/new_Title"
            android:ems="10"
            android:id="@+id/content_new_password_title"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textAutoCorrect"
            android:hint="@string/new_Description"
            android:ems="10"
            android:id="@+id/content_new_password_description"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textVisiblePassword"
            android:hint="@string/new_Password"
            android:ems="10"
            android:id="@+id/content_new_password_password"/>
    <Button
            android:text="@string/new_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/content_new_password_save"/>
</LinearLayout>